<?xml version="1.0" encoding="utf-8"?>
<com.abacus.android.cropcontrol.CropView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crop_control"
    android:clickable="true"
    android:layout_centerInParent="true"
    android:layout_width="@dimen/crop_control_width"
    android:layout_height="@dimen/crop_control_height">

    <com.abacus.android.cropcontrol.CornerView
        android:id="@+id/top_left_corner"
        android:layout_width="@dimen/crop_corner_width"
        android:layout_height="@dimen/crop_corner_width"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        custom:corner="topleft"
        />

    <com.abacus.android.cropcontrol.CornerView
        android:id="@+id/top_right_corner"
        android:layout_width="@dimen/crop_corner_width"
        android:layout_height="@dimen/crop_corner_width"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        custom:corner="topright"/>

    <com.abacus.android.cropcontrol.CornerView
        android:id="@+id/bottom_right_corner"
        android:layout_width="@dimen/crop_corner_width"
        android:layout_height="@dimen/crop_corner_width"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        custom:corner="bottomright"/>

    <com.abacus.android.cropcontrol.CornerView
        android:id="@+id/bottom_left_corner"
        android:layout_width="@dimen/crop_corner_width"
        android:layout_height="@dimen/crop_corner_width"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        custom:corner="bottomleft"/>

    <ImageView
        android:layout_margin="@dimen/crop_corner_width_halved"
        android:background="@drawable/white_border_rect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_view"/>

    <View
        android:id="@+id/view_scan_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignLeft="@+id/image_view"
        android:layout_alignRight="@+id/image_view"
        android:visibility="visible"
        android:background="@color/colorAccent" />

</com.abacus.android.cropcontrol.CropView>